<div id="form">
  <h2>Signup</h2>
  <form action="/users/signup" method="POST">

    <label> Username:
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Password:
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Sign Up</button>

  </form>

    {{#if errorMessage}}
        <h3>{{errorMessage}}</h3>
    {{/if}}

</div>